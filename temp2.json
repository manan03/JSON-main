{
    "EC2Instance": {
        "Type1": "AWS::EC2::Instance",
        "Properties": {
            "InstanceType": {
                "Ref": "InstanceType"
            },
            "SecurityGroups": [
                {
                    "Ref": "InstanceSecurityGroup"
                }
            ],
            "KeyName1": {
                "Ref": "KeyName1"
            },
            "ImageId": {
                "Fn::FindInMap": [
                    "AWSRegionArch2AMI",
                    {
                        "Ref": "AWS::Region"
                    },
                    {
                        "Fn::FindInMap": [
                            "AWSInstanceType2Arch",
                            {
                                "Ref": "InstanceType"
                            },
                            "Arch"
                        ]
                    }
                ]
            }
        }
    }
}